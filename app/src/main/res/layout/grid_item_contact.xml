<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="100dp"
    android:background="@android:drawable/screen_background_light_transparent">

    <RelativeLayout
        android:id="@+id/grid_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/grid_item_vertical_separate">
        <ImageView
            android:id="@+id/grid_item_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/grid_item_horizontal_center"
            android:background="@android:color/white"
            />
        <View
            android:id="@+id/grid_item_horizontal_center"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">
        </View>

    </RelativeLayout>

    <View
        android:id="@+id/grid_item_vertical_separate"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/grid_item_layout_name"
        android:background="@android:color/holo_purple"/>

    <LinearLayout
        android:id="@+id/grid_item_layout_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_blue_light"
        android:orientation="vertical">
        <TextView
            android:id="@+id/grid_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:text="hogehoge"
            />
    </LinearLayout>

</RelativeLayout>